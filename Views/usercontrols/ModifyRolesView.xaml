<UserControl x:Class="HospitalManagementSystem.Views.UserControls.ModifyRolesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="#F0F0F0" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Modify Roles &amp; Permissions"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   FontSize="24"
                   FontWeight="Bold"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- User List -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Select a User"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <ListBox x:Name="UserListBox"
                         Height="350"
                         Background="#FFFFFF"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         DisplayMemberPath="Username"/>
            </StackPanel>

            <!-- User Details & Role Modification -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="User Details"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <TextBlock x:Name="UsernameTextBlock" 
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,0,5"/>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Name:" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" x:Name="FullNameTextBlock" Margin="5,0,0,0"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Current Role:" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" x:Name="CurrentRoleTextBlock" Margin="5,0,0,0"/>
                </Grid>

                <TextBlock Text="Assign New Role"
                           FontWeight="Bold"
                           Margin="0,10,0,5"/>

                <ComboBox x:Name="NewRoleComboBox" Margin="0,0,0,20">
                    <ComboBoxItem Content="Admin"/>
                    <ComboBoxItem Content="Doctor"/>
                    <ComboBoxItem Content="Nurse"/>
                    <ComboBoxItem Content="Clerk"/>
                </ComboBox>

                <Button Content="Update Role"
                        Background="#007ACC"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="10,5"
                        HorizontalAlignment="Stretch"
                        Cursor="Hand"
                        Click="UpdateRoleButton_Click"/>
            </StackPanel>
        </Grid>

        <TextBlock Grid.Row="2" 
                   x:Name="StatusTextBlock"
                   Text=""
                   Foreground="Red"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>

    </Grid>
</UserControl>
