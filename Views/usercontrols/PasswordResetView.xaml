<UserControl x:Class="HospitalManagementSystem.Views.UserControls.PasswordResetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="#F0F0F0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="User Password Management"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- User Selection Section -->
            <TextBlock Text="Select User:"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <ListBox x:Name="UsersListBox"
                     Height="150"
                     Margin="0,0,0,20"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     ItemsSource="{Binding Users}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Username}" Padding="5"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Password Reset Section -->
            <TextBlock Text="New Password:"
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="NewPasswordBox"
                         Width="300"
                         Height="30"
                         Margin="0,0,0,10"/>

            <TextBlock Text="Confirm New Password:"
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox"
                         Width="300"
                         Height="30"
                         Margin="0,0,0,20"/>

            <Button Content="Reset Password"
                    Width="150"
                    Height="40"
                    Click="ResetPasswordButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
