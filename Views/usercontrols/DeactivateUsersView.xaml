<UserControl x:Class="HospitalManagementSystem.Views.UserControls.DeactivateUsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="#F0F0F0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Deactivate/Activate Users"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- User Selection Section -->
            <TextBlock Text="Select User:"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <ListBox x:Name="UsersListBox"
                     Height="300"
                     Margin="0,0,0,20"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     ItemsSource="{Binding Users}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <!-- Corrected binding from 'Name' to 'Username' -->
                            <TextBlock Text="{Binding Username}" FontWeight="SemiBold" VerticalAlignment="Center" Width="200"/>
                            <TextBlock Text="{Binding IsActive, StringFormat='Status: {0}'}" 
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                <Setter Property="Foreground" Value="Green"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Corrected Buttons for Deactivate/Activate Functionality -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Deactivate User"
                        Width="150"
                        Height="40"
                        Margin="0,0,10,0"
                        Click="DeactivateButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=UsersListBox, Path=SelectedItem.IsActive}" Value="False">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Activate User"
                        Width="150"
                        Height="40"
                        Click="ActivateButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=UsersListBox, Path=SelectedItem.IsActive}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
