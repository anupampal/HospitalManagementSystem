        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome to the Hospital Dashboard" FontSize="36" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>
