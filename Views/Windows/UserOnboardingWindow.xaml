<Window x:Class="HospitalManagementSystem.Views.Windows.UserOnboardingWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="Onboard New User" Height="500" Width="400"
WindowStartupLocation="CenterScreen"
Background="#f0f2f5">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Header -->
		<Border Grid.Row="0" Background="#2C3E50" Padding="15">
			<TextBlock Text="Onboard New User"
					   FontSize="20" FontWeight="Bold"
					   Foreground="White"
					   HorizontalAlignment="Center"/>
		</Border>

		<!-- Main Content -->
		<StackPanel Grid.Row="1" Margin="30" VerticalAlignment="Center">

			<!-- Username Input -->
			<Label Content="Username" Foreground="#333" FontWeight="SemiBold"/>
			<TextBox x:Name="UsernameTextBox" Padding="8" FontSize="14" Margin="0,5,0,15"
					 BorderBrush="#ccc" BorderThickness="1"
					 TextWrapping="Wrap"/>

			<!-- Password Input -->
			<Label Content="Password" Foreground="#333" FontWeight="SemiBold"/>
			<PasswordBox x:Name="PasswordBox" Padding="8" FontSize="14" Margin="0,5,0,15"
						 BorderBrush="#ccc" BorderThickness="1"/>

			<!-- Role Selection -->
			<Label Content="Role" Foreground="#333" FontWeight="SemiBold"/>
			<ComboBox x:Name="RoleComboBox" Margin="0,5,0,20" Padding="8" FontSize="14">
			</ComboBox>

			<!-- Status Message -->
			<TextBlock x:Name="StatusMessageText"
					   TextAlignment="Center"
					   FontWeight="SemiBold"
					   Margin="0,0,0,10"/>

			<!-- Onboard Button -->
			<Button x:Name="OnboardButton"
					Content="Onboard User"
					Background="#00c49a"
					Foreground="White"
					BorderThickness="0"
					Padding="15,10"
					FontSize="16"
					FontWeight="Bold"
					Click="OnboardButton_Click">
				<Button.Resources>
					<Style TargetType="{x:Type Border}">
						<Setter Property="CornerRadius" Value="8"/>
					</Style>
				</Button.Resources>
			</Button>
		</StackPanel>
	</Grid>

</Window>