<Window x:Class="HospitalManagementSystem.Views.Windows.DoctorDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Doctor Dashboard - Hospital Management System" Height="550" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F8FF">
        <!-- Dashboard Content for Doctor -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome, Doctor" FontSize="36" FontWeight="Bold" Foreground="#007ACC" Margin="0,0,0,20"/>
            <TextBlock Text="This is your dedicated dashboard for managing patient appointments and records." 
                       FontSize="16" Foreground="#666" TextAlignment="Center" Margin="0,0,0,40"/>

            <Button Content="View Patient List" Width="200" Height="45" Margin="0,10" Background="#28A745" Foreground="White" FontSize="16" BorderBrush="#218838" BorderThickness="1"/>
            <Button Content="Manage Appointments" Width="200" Height="45" Margin="0,10" Background="#FFC107" Foreground="#333" FontSize="16" BorderBrush="#E0A800" BorderThickness="1"/>
            <Button Content="Logout" Click="LogoutButton_Click" Width="200" Height="45" Margin="0,30" Background="#DC3545" Foreground="White" FontSize="16" BorderBrush="#C82333" BorderThickness="1"/>
        </StackPanel>
    </Grid>
</Window>
